<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_shadow_flashcard_white"
    android:layout_width="250dp"
    android:layout_height="350dp">

  <TextView
      android:id="@+id/textFrontSide"
      android:textSize="34sp"
      android:textStyle="bold"
      android:gravity="center"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/textBackSide"
      android:textSize="34sp"
      android:textStyle="bold"
      android:gravity="center"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <ImageView
      android:id="@+id/iconNope"
      android:alpha="0"
      android:src="@drawable/icon_nope"
      android:rotation="30"
      android:layout_marginTop="@dimen/default_margin_xxlarge"
      android:layout_marginEnd="@dimen/default_margin_small"
      android:layout_alignParentEnd="true"
      android:layout_width="100dp"
      android:layout_height="50dp"
      tools:alpha="1"/>

  <ImageView
      android:id="@+id/iconLike"
      android:alpha="0"
      android:src="@drawable/icon_like"
      android:rotation="-30"
      android:layout_marginTop="@dimen/default_margin_xxlarge"
      android:layout_marginStart="@dimen/default_margin_small"
      android:layout_width="100dp"
      android:layout_height="50dp"
      tools:alpha="1"/>

  <View
      android:id="@+id/overlayView"
      android:visibility="invisible"
      android:background="#0D000000"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

</RelativeLayout>